from tkinter import *
from tkinter import ttk

class BoardUI:

    def __init__(self, width, height):
        self.width = width
        self.height = height
        self.root = Tk()
        self.canvas = Canvas(self.root, width=width, height=height, background='gray75');
        
        self.__create_boardui();


    def get_player_input(self):
        pass

    def update(self):
        pass

    def notify_player(self):
        pass

    @staticmethod
    def __create_circle( x, y, r, fill_colour, canvas, tag):
        x0 = x - r
        y0 = y - r
        x1 = x + r
        y1 = y + r
        return canvas.create_oval(x0, y0, x1, y1, fill=fill_colour, tag=tag)

    
    def __change_colour(self, event):
        current_item = self.canvas.find_withtag("current")
        if current_item:
            self.canvas.itemconfigure(current_item, fill='green')
            

    def __create_boardui(self):
        self.canvas.grid(row=0, column=0, padx=20, pady=20)
        

        w = self.width / 7
        h = self.height / 6
        
        for i in range(0, 7):
            for j in range(0, 6):
                tag = "col" + "_" + str(j)
                id = self.__create_circle(i*w +(w / 2), j*h + h / 2,  w / 2, 'gray75', self.canvas, tag=tag)
                self.canvas.tag_bind(tag, "<Button-1>", self.__change_colour)


    def display_board(self):
        self.root.mainloop()


board_ui = BoardUI(700, 600);
board_ui.display_board()




